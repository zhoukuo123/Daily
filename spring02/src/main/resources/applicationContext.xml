<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--  bean标签默认通过默认构造方法创建对象  -->
    <bean id="apple1" class="com.zk.spring.ioc.entity.Apple">

    </bean>
    <!--  使用带参构造方法实例化对象  -->
    <bean id="sweetApple" class="com.zk.spring.ioc.entity.Apple">
        <constructor-arg name="title" value="红富士"/>
        <constructor-arg name="origin" value="欧洲"/>
        <constructor-arg name="color" value="红色"/>
    </bean>

    <bean id="sweetApple1" class="com.zk.spring.ioc.entity.Apple">
        <constructor-arg name="title" value="红富士"/>
        <constructor-arg name="origin" value="欧洲"/>
        <constructor-arg name="color" value="红色"/>
        <constructor-arg name="price" value="19.2"/>
    </bean>

    <bean name="sweetApple2" class="com.zk.spring.ioc.entity.Apple">
        <constructor-arg name="title" value="红富士1"/>
        <constructor-arg name="origin" value="欧洲"/>
        <constructor-arg name="color" value="红色"/>
        <constructor-arg name="price" value="19.2"/>
    </bean>

    <bean name="sweetApple3, sweetApple4" class="com.zk.spring.ioc.entity.Apple">
        <constructor-arg name="title" value="红富士2"/>
        <constructor-arg name="origin" value="欧洲"/>
        <constructor-arg name="color" value="红色"/>
        <constructor-arg name="price" value="19.2"/>
    </bean>

    <!--  没有id与name的bean默认使用类名全称作为bean标识  -->
    <bean class="com.zk.spring.ioc.entity.Apple">
        <constructor-arg name="title" value="红富士3"/>
        <constructor-arg name="origin" value="欧洲"/>
        <constructor-arg name="color" value="红色"/>
        <constructor-arg name="price" value="19.2"/>
    </bean>

    <!--  利用静态工厂获取对象  -->
    <bean id="apple4" class="com.zk.spring.ioc.factory.AppleStaticFactory" factory-method="createSweetApple"/>

    <!--  利用工厂实例方法获取对象  -->
    <bean id="factoryInstance" class="com.zk.spring.ioc.factory.AppleFactoryInstance"/>
    <bean id="apple5" factory-bean="factoryInstance" factory-method="createSweetApple"/>
</beans>