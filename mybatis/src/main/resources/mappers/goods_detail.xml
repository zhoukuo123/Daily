<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="goodsDetail">
    <select id="selectByGoodsId" parameterType="integer" resultType="com.zk.mybatis.entity.GoodsDetail">
        select *
        from t_goods_detail
        where goods_id = #{value}
    </select>

    <resultMap id="rmGoodsDetail" type="com.zk.mybatis.entity.GoodsDetail">
        <id column="gd_id" property="gdId"/>
        <result column="goods_id" property="goodsId"/>
        <association property="goods" column="goods_id" select="goods.selectById"/>
    </resultMap>
    <select id="selectManyToOne" resultMap="rmGoodsDetail">
        select *
        from t_goods_detail
        limit 0,1
    </select>
</mapper>